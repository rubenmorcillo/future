{% extends 'pruebas/base_usuario.html.twig' %}

{% block centro %}

    <div id="inventario">
        <h3>INVENTARIO</h3>
        <p>CAPACITY: {{ inventory.currentCapacity }}/{{ inventory.maxCapacity }}</p>
