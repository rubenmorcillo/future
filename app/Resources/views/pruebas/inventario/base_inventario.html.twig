                <li class="letra_equipo">ITEM</li>
                <li class="letra_equipo">ITEM</li>
                <li class="letra_equipo">ITEM</li>
            </ul>
        </nav>


        <div class="tabla_detalles">
        </div>
        <div id="inventario_armas" class="inventario_seccion">

                <table class="tabla_items">
                    {% for arma in inventory.weapons %}
                        <tr class="inventario_item">
                            <td class="arma_nombre item_td">{{ arma.name }}</td><td class="arma_da침o item_td">{{ arma.damage }}</td><td class="arma_valor item_td">{{ arma.value }}</td>
