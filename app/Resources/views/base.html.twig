<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- FontAwesome CSS -->
    <link rel="stylesheet" href="{{ asset('fontawesome-free-5.7.1-web/css/all.min.css') }}">

    <!-- Estilos propios de la aplicaciÃ³n -->
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">

    <title>{% block title %}FUTURE{% endblock %}</title>

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
{% block body %}
    {% block flash_message %}
        {% for mensaje in app.session.flashbag.get('exito') %}
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{ mensaje }}
        </div>
         {% endfor %}
        {% for mensaje in app.session.flashbag.get('error') %}
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ mensaje }}
            </div>
        {% endfor %} {% endblock %}
    {% block content %}
    {% endblock %}
{% endblock %}
<style>
    {#*{#}
        {#cursor:url("{{ asset('recursos/cursor.png') }}");#}
    {#}#}
</style>
<script src="{{ asset('jquery/jquery-3.3.1.min.js') }}"></script>
<script src="{{ asset('popper/popper.min.js') }}"></script>
</body>
</html>